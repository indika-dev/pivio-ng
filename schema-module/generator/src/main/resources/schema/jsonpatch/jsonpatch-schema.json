{
    "title": "JsonPatchObject",
    "$comment": "A JSON Schema describing a JSON Patch",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "notes": [
        "Only required members are accounted for, other members are ignored"
    ],
    "type": "object",
    "properties": {
        "operations": {
            "type": "array",
            "items": {
                "type": "object",
                "$comment": "one JSON Patch operation",
                "properties": {
                    "op": {
                        "enum": [
                            "add",
                            "remove",
                            "replace",
                            "move",
                            "copy",
                            "test"
                        ]
                    },
                    "path": {
                        "type": "string",
                        "format": "json-pointer"
                    },
                    "value": {
                        "type": "JsonNode",
                        "$comment": "can be any JSON Value"
                    },
                    "from": {
                        "$ref": "#/definitions/jsonPointer"
                    }
                }
            }
        }
    },
    "definitions": {
        "jsonPointer": {
            "type": "string",
            "pattern": "^(/[^/~]*(~[01][^/~]*)*)*$"
        }
    }
}
